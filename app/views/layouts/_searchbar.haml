.navbar-header
	= link_to image_tag('logo.png'), '/', :class =>'logo'	   
	= form_tag '/results', :class => 'form_tag', :method => 'get' do
		= label_tag :"Country: "
		= select_tag :country, options_for_select( Movie.all.collect {|m| [ m.title, m.id ] }, params[:country]), :class =>'select_tag', :include_blank => true
		= label_tag :"Genre: "
		= select_tag :genre, options_for_select(["fic", "doc", "exp" ], params[:genre]), :class =>'select_tag', :include_blank => true
		= submit_tag "Search", :name => nil, :class =>'submit-btn'	  
		   
		     